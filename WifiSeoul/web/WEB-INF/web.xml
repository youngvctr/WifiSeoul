<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>servlet.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>servlet.mission.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logs</servlet-name>
        <servlet-class>servlet.mission.Logs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>servlet.mission.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Detail</servlet-name>
        <servlet-class>servlet.mission.Detail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bookmark</servlet-name>
        <servlet-class>servlet.mission.Bookmark</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkUpdate</servlet-name>
        <servlet-class>servlet.mission.BookmarkUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkDelete</servlet-name>
        <servlet-class>servlet.mission.BookmarkDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkGroup</servlet-name>
        <servlet-class>servlet.mission.BookmarkGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkGroupList</servlet-name>
        <servlet-class>servlet.mission.BookmarkGroupList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkGroupUpdate</servlet-name>
        <servlet-class>servlet.mission.BookmarkGroupUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookmarkGroupDelete</servlet-name>
        <servlet-class>servlet.mission.BookmarkGroupDelete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logs</servlet-name>
        <url-pattern>/logData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Detail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bookmark</servlet-name>
        <url-pattern>/bookmark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkUpdate</servlet-name>
        <url-pattern>/bookmark-update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkDelete</servlet-name>
        <url-pattern>/bookmark-delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkGroup</servlet-name>
        <url-pattern>/bookmark-group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkGroupList</servlet-name>
        <url-pattern>/bookmark-group-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkGroupUpdate</servlet-name>
        <url-pattern>/bookmark-group-update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookmarkGroupDelete</servlet-name>
        <url-pattern>/bookmark-group-delete</url-pattern>
    </servlet-mapping>
</web-app>


